<div class="col-md-8 d-flex flex-column align-items-center">
    <form action="/exam/enroll" method="POST" class="mb-5 border border-primary rounded p-3" >
        <div>
            <label for="ExamID" class="form-label">Exam Code</label>
            <input name="ExamID" id="ExamID" class="form-control" type="text" />
            <button type="submit" class="btn btn-primary mt-3">Enroll to an Exam</button>
        </div>
    </form>
    <% if (data.length> 0) { %>
        <ul class="col-md-8 list-group">
            <% data.map(enrollment=> { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= enrollment.Exam.Title %>
                        <div>
                            <a class="btn btn-primary" href="/exam/<%= enrollment.Exam.ID %>">START</a>
                        </div>
                </li>
                <% }) %>
        </ul>
        <% } else { %>
            There are not any exams that you've enrolled. But you can enroll one easily.
            <% } %>
</div>